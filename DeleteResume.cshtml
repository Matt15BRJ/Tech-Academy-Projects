@model JobBoardMVC.Models.ResumeModel

@{
    ViewBag.Title = "DeleteResume";
    var _fileId = Model.FileId;
}

<h2>Delete Resume</h2>

<h3>Are you sure you want to delete this Resume?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FileName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FileName)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.HiddenFor(model => model.FileId)@*need this part to pass in fileId to controller, otherwise a null valued model gets passed in*@
            <input type="submit" value="Delete Resume" class="btn btn-default" data-bind="@_fileId" /> |
            @Html.ActionLink("User Profile", "UserProfile")
        </div>
    }
</div>

